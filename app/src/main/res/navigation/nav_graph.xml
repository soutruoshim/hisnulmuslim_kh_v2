<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/contentFragment">

    <fragment
        android:id="@+id/contentFragment"
        android:name="com.srhdp.hisnulmuslim.ContentFragment"
        android:label="Hisnul Muslim Khmer"
        tools:layout="@layout/fragment_content" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.srhdp.hisnulmuslim.FavoriteFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.srhdp.hisnulmuslim.HistoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/moreFragment"
        android:name="com.srhdp.hisnulmuslim.MoreFragment"
        android:label="More"
        tools:layout="@layout/fragment_more" >
        <action
            android:id="@+id/action_moreFragment_to_introFragment"
            app:destination="@id/introFragment" />
        <action
            android:id="@+id/action_moreFragment_to_translatorFragment"
            app:destination="@id/translatorFragment" />
    </fragment>
    <fragment
        android:id="@+id/introFragment"
        android:name="com.srhdp.hisnulmuslim.IntroFragment"
        android:label="fragment_intro"
        tools:layout="@layout/fragment_intro" />
    <fragment
        android:id="@+id/translatorFragment"
        android:name="com.srhdp.hisnulmuslim.TranslatorFragment"
        android:label="fragment_translator"
        tools:layout="@layout/fragment_translator" />
</navigation>